# Production Environment Configuration
CHORUS_ENVIRONMENT=production
CHORUS_DEBUG=false

# Google Cloud (Gemini) - REQUIRED
CHORUS_GEMINI_API_KEY=your_production_gemini_api_key_here
CHORUS_GEMINI_MODEL=gemini-3-pro-preview
CHORUS_GEMINI_TIMEOUT=30.0
CHORUS_GEMINI_MAX_RETRIES=3
CHORUS_GEMINI_RETRY_DELAY=1.0

# Redis Configuration - REQUIRED for persistence
CHORUS_REDIS_HOST=redis-production-host
CHORUS_REDIS_PORT=6379
CHORUS_REDIS_PASSWORD=your_secure_redis_password
CHORUS_REDIS_DB=0
CHORUS_REDIS_POOL_SIZE=20
CHORUS_REDIS_SOCKET_TIMEOUT=5.0
CHORUS_REDIS_CONNECT_TIMEOUT=5.0
CHORUS_REDIS_RETRY_ON_TIMEOUT=true

# Datadog Configuration - RECOMMENDED for production
CHORUS_DATADOG_ENABLED=true
CHORUS_DATADOG_API_KEY=your_production_datadog_api_key
CHORUS_DATADOG_APP_KEY=your_production_datadog_app_key
CHORUS_DATADOG_SITE=datadoghq.com

# ElevenLabs - Optional
CHORUS_ELEVENLABS_ENABLED=false
CHORUS_ELEVENLABS_API_KEY=your_production_elevenlabs_key
CHORUS_ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Kafka Configuration - Optional
CHORUS_KAFKA_ENABLED=false
CHORUS_KAFKA_BOOTSTRAP_SERVERS=your-kafka-cluster:9092
CHORUS_KAFKA_SECURITY_PROTOCOL=SASL_SSL
CHORUS_KAFKA_SASL_MECHANISM=PLAIN
CHORUS_KAFKA_SASL_USERNAME=your_kafka_username
CHORUS_KAFKA_SASL_PASSWORD=your_kafka_password
CHORUS_KAFKA_AGENT_MESSAGES_TOPIC=agent-messages-raw
CHORUS_KAFKA_AGENT_DECISIONS_TOPIC=agent-decisions-processed
CHORUS_KAFKA_SYSTEM_ALERTS_TOPIC=system-alerts

# API Configuration
CHORUS_API_HOST=0.0.0.0
CHORUS_API_PORT=8000
CHORUS_API_WORKERS=4

# Agent Simulation Settings
CHORUS_MIN_AGENTS=10
CHORUS_MAX_AGENTS=50
CHORUS_AGENT_REQUEST_INTERVAL_MIN=0.5
CHORUS_AGENT_REQUEST_INTERVAL_MAX=5.0
CHORUS_AGENT_RESOURCE_TYPES=cpu,memory,network,storage,gpu

# Trust Scoring Settings
CHORUS_INITIAL_TRUST_SCORE=100
CHORUS_TRUST_SCORE_THRESHOLD=30
CHORUS_TRUST_CONFLICT_PENALTY=10
CHORUS_TRUST_COOPERATION_BONUS=1
CHORUS_MAX_TRUST_SCORE=100
CHORUS_MIN_TRUST_SCORE=0

# Conflict Prediction Settings
CHORUS_CONFLICT_RISK_THRESHOLD=0.7
CHORUS_PREDICTION_INTERVAL=2.0
CHORUS_ANALYSIS_WINDOW=20

# Logging Configuration
CHORUS_LOG_LEVEL=INFO
CHORUS_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
CHORUS_LOG_STRUCTURED=true
CHORUS_LOG_FILE_PATH=/var/log/chorus/chorus.log
CHORUS_LOG_MAX_FILE_SIZE=52428800
CHORUS_LOG_BACKUP_COUNT=10

# Health Check Configuration
CHORUS_HEALTH_CHECK_ENABLED=true
CHORUS_HEALTH_CHECK_INTERVAL=30.0
CHORUS_HEALTH_CHECK_TIMEOUT=10.0
CHORUS_HEALTH_CHECK_MAX_FAILURES=3

# CLI Configuration
CHORUS_CLI_REFRESH_RATE=2.0
CHORUS_CLI_MAX_LINES=100