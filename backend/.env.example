# Environment
CHORUS_ENVIRONMENT=development
CHORUS_DEBUG=true

# Google Cloud (Gemini)
CHORUS_GEMINI_API_KEY=your_gemini_api_key_here
CHORUS_GEMINI_MODEL=gemini-3-pro-preview
CHORUS_GEMINI_TIMEOUT=30.0
CHORUS_GEMINI_MAX_RETRIES=3
CHORUS_GEMINI_RETRY_DELAY=1.0

# Redis Configuration
CHORUS_REDIS_HOST=localhost
CHORUS_REDIS_PORT=6379
CHORUS_REDIS_PASSWORD=
CHORUS_REDIS_DB=0
CHORUS_REDIS_POOL_SIZE=10
CHORUS_REDIS_SOCKET_TIMEOUT=5.0
CHORUS_REDIS_CONNECT_TIMEOUT=5.0
CHORUS_REDIS_RETRY_ON_TIMEOUT=true

# Datadog Configuration
CHORUS_DATADOG_ENABLED=false
CHORUS_DATADOG_API_KEY=your_datadog_api_key
CHORUS_DATADOG_APP_KEY=your_datadog_app_key
CHORUS_DATADOG_SITE=datadoghq.com

# ElevenLabs
CHORUS_ELEVENLABS_ENABLED=false
CHORUS_ELEVENLABS_API_KEY=your_elevenlabs_key
CHORUS_ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# =============================================================================
# CONFLUENT KAFKA CONFIGURATION (Optional)
# =============================================================================
KAFKA_ENABLED=false

# Confluent Cloud Bootstrap Servers (get this from your Confluent Cloud cluster)
KAFKA_BOOTSTRAP_SERVERS=pkc-xxxx.us-east1.gcp.confluent.cloud:9092

# Security Configuration for Confluent Cloud
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN

# Confluent Cloud API Credentials (Key = Username, Secret = Password)
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# Topic Names
KAFKA_AGENT_MESSAGES_TOPIC=agent-messages-raw
KAFKA_AGENT_DECISIONS_TOPIC=agent-decisions-processed
KAFKA_SYSTEM_ALERTS_TOPIC=system-alerts


# API Configuration
CHORUS_API_HOST=0.0.0.0
CHORUS_API_PORT=8000
CHORUS_API_WORKERS=1

# Agent Simulation Settings
CHORUS_MIN_AGENTS=5
CHORUS_MAX_AGENTS=10
CHORUS_AGENT_REQUEST_INTERVAL_MIN=1.0
CHORUS_AGENT_REQUEST_INTERVAL_MAX=10.0
CHORUS_AGENT_RESOURCE_TYPES=cpu,memory,network,storage

# Trust Scoring Settings
CHORUS_INITIAL_TRUST_SCORE=100
CHORUS_TRUST_SCORE_THRESHOLD=30
CHORUS_TRUST_CONFLICT_PENALTY=10
CHORUS_TRUST_COOPERATION_BONUS=1
CHORUS_MAX_TRUST_SCORE=100
CHORUS_MIN_TRUST_SCORE=0

# Conflict Prediction Settings
CHORUS_CONFLICT_RISK_THRESHOLD=0.7
CHORUS_PREDICTION_INTERVAL=5.0
CHORUS_ANALYSIS_WINDOW=10

# Logging Configuration
CHORUS_LOG_LEVEL=INFO
CHORUS_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
CHORUS_LOG_STRUCTURED=true
CHORUS_LOG_FILE_PATH=
CHORUS_LOG_MAX_FILE_SIZE=10485760
CHORUS_LOG_BACKUP_COUNT=5

# Health Check Configuration
CHORUS_HEALTH_CHECK_ENABLED=true
CHORUS_HEALTH_CHECK_INTERVAL=30.0
CHORUS_HEALTH_CHECK_TIMEOUT=10.0
CHORUS_HEALTH_CHECK_MAX_FAILURES=3

# CLI Configuration
CHORUS_CLI_REFRESH_RATE=1.0
CHORUS_CLI_MAX_LINES=50
